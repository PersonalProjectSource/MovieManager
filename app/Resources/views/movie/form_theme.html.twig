{% block _movie_image_row %}
    {{ form_errors(form) }}
    {{ form_widget(form) }}
    {% if form.vars.value.alt is defined and form.vars.value.alt is not null %}
        <div class="form-group">
            <label class="col-sm-2 control-label">{{ 'film.image' | trans }}</label>
            <div class="col-sm-10">
                <img
                        src="{{ asset(form.vars.value.getWebPath) }}"
                        alt="{{ form.vars.value.alt }}"
                />
            </div>
        </div>
    {% endif %}
{% endblock %}